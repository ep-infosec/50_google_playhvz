<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
      android:id="@+id/declare_allegiance_card"
      layout="@layout/card_declare_allegiance" />

    <include
      android:id="@+id/infect_card"
      layout="@layout/card_infect" />

    <include
      android:id="@+id/life_code_card"
      layout="@layout/card_life_code" />

    <include
      android:id="@+id/mission_card"
      layout="@layout/card_mission" />

    <include
      android:id="@+id/leaderboard_card"
      layout="@layout/card_leaderboard" />
  </LinearLayout>
</ScrollView>